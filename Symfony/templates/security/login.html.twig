{% extends 'base.html.twig' %}

{% block title %}Inscription | Village Green{% endblock %}

{% block body %}
    <h1 class="h2 text-center fw-bold">Login</h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="_username" placeholder="Adresse email" required>
            <input type="password" class="form-control" name="_password" placeholder="Mot de passe" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
        </div>
    </form>
{% endblock %}
