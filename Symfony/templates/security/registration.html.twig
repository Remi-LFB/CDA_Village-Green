{% extends 'base.html.twig' %}

{% block title %}Inscription | Village Green{% endblock %}

{% block body %}
    <h1 class="h2 text-center fw-bold">Formulaire d'inscription</h1>
    {{ form_start(form) }}
    {{ form_row(form.lastname, {'label': 'Nom'}) }}
    {{ form_row(form.firstname, {'label': 'Prénom'}) }}
    {{ form_row(form.birthAt, {'label': 'Date de naissance'}) }}
    {{ form_row(form.gender, {'label': 'Genre'}) }}
    {{ form_row(form.mail, {'label': 'Adresse email'}) }}
    {{ form_row(form.phone, {'label': 'Numéro de téléphone'}) }}
    {{ form_row(form.password, {'label': 'Mot de passe'}) }}
    {{ form_row(form.confirmPassword, {'label': 'Confirmation mot de passe'}) }}
    <button type="submit" class="btn btn-success fw-bold">Inscription !</button>
    {{ form_end(form) }}
{% endblock %}
