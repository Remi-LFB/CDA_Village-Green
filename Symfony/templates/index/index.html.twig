{% extends 'base.html.twig' %}

{% block title %}Village Green{% endblock %}

{% block body %}
    <div class="text-center mt-3">
        <h1 class="h2 fw-bold">Cat√©gories</h1><br>
        <div class="row row-cols-1 row-cols-md-3 g-5">
            {% for category in categories %}
                <div class="col">
                    <div class="border-bottom h-100 m-1">
                        <a class="a-category" href="{{ path('category_show', {'category': category.id}) }}">
                            <img src="{{ category.picture }}" class="img-fluid mx-auto" alt="{{ category.name }}" title="{{ category.name }}">
                            <h5>{{ category.name }}</h5>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}