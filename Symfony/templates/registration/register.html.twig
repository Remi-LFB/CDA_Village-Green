{% extends 'base.html.twig' %}

{% block title %}Inscription | Village Green{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item d-none d-md-block d-lg-block d-xl-block">
        <a class="text-white" href="{{ path('app_register') }}">Inscription</a>
    </li>
{% endblock %}

{% block body %}
    <h1 class="h3 mb-4 font-weight-normal">S'enregistrer :</h1>

    {{ form_start(registrationForm) }}
    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                {{ form_widget(registrationForm.lastname, {'class': 'form-control'}) }}
                <label for="registration_form_lastname" class="form-label">Nom</label>
                {{ form_errors(registrationForm.lastname) }}
            </div>
        </div>
        <div class="col">
            <div class="form-outline">
                {{ form_widget(registrationForm.firstname, {'class': 'form-control'}) }}
                <label for="registration_form_firstname" class="form-label">Prénom</label>
                {{ form_errors(registrationForm.firstname) }}
            </div>
        </div>
    </div>

    <div class="mb-4">
        <label for="registration_form_birthAt">Date de naissance :</label>
        {{ form_widget(registrationForm.birthAt, {'class': 'form-control'}) }}
        {{ form_errors(registrationForm.birthAt) }}
    </div>

    <div class="mb-4">
        <label for="registration_form_gender" class="form-label">Genre</label>
        {{ form_widget(registrationForm.gender, {'class': 'form-control'}) }}
    </div>

    <div class="form-outline mb-4">
        {{ form_widget(registrationForm.email, {'class': 'form-control'}) }}
        <label for="registration_form_email" class="form-label">Adresse email</label>
        {{ form_errors(registrationForm.email) }}
    </div>


    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                {{ form_widget(registrationForm.plainPassword.first, {'class': 'form-control'}) }}
                <label for="registration_form_plainPassword_first" class="form-label">Mot de passe</label>
                {{ form_errors(registrationForm.plainPassword.first) }}
            </div>
        </div>

        <div class="col">
            <div class="form-outline">
                {{ form_widget(registrationForm.plainPassword.second, {'class': 'form-control'}) }}
                <label for="registration_form_plainPassword_second" class="form-label">Confirmez votre mot de passe</label>
            </div>
        </div>
    </div>

    <div class="mb-4">
        {{ form_widget(registrationForm.agreeTerms) }}
    </div>

    <button type="submit" class="btn btn-primary mb-2">S'enregistrer</button>

    <p>Déjà inscrit ? <a href="{{ path('app_login') }}">Se connecter</a>.</p>
    {{ form_end(registrationForm) }}
{% endblock %}
