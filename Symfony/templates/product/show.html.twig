{% extends 'base.html.twig' %}

{% block title %}{{ product.label }} | Village Green{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item d-none d-md-block d-lg-block d-xl-block">
        <a class="text-white" href="{{ path('category_show', {'category': product.subCategory.category.id}) }}">{{ product.subCategory.category.name }}</a>
    </li>
    <li class="breadcrumb-item d-none d-md-block d-lg-block d-xl-block">
        <a class="text-white" href="{{ path('subcategory_show', {'subCategory': product.subCategory.id}) }}">{{ product.subCategory.name }}</a>
    </li>
    <li class="breadcrumb-item d-none d-md-block d-lg-block d-xl-block">
        <a class="text-white" href="{{ path('product_show', {'product': product.id}) }}">{{ product.label }}</a>
    </li>
{% endblock %}

{% block body %}
    <h1 class="h2 text-center mt-3">{{ product.label }}</h1>
    <div class="row row-cols-1 row-cols-md-2 g-5 mx-auto">
        <div class="col">
            <a class="card shadow-0 mt-3 pb-3" href="{{ asset(product.picture) }}" target="_blank">
                <img src="{{ asset(product.picture) }}" alt="{{ product.label }}" title="{{ product.label }}" class="img-fluid mx-auto" height="400" width="400">
            </a>
            <p class="mt-3">{{ product.description|nl2br }}</p>
        </div>
        <div class="col d-flex align-items-center">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th>Prix unitaire HT : {{ product.price }}â‚¬</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {% if not product.state or product.stock < 1 %}
                            <td class="text-danger">INDISPONIBLE</td>
                        {% else %}
                            <td class="text-success"><a href="#" class="btn btn-success">Ajouter au panier</a></td>
                        {% endif %}
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
